{
  "name": "voice-sandwich-demo",
  "private": true,
  "scripts": {
    "build": "pnpm run --filter=\"create-voice-agent\" --filter=\"./provider/[^_]**\" build",
    "watch": "pnpm build && pnpm run --filter=\"create-voice-agent\" --filter=\"./provider/[^_]**\" --parallel build --watch",
    "clean": "git clean -fdX .",
    "clean:build": "git clean -fdx -e node_modules .",
    "format": "oxfmt",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "start:webrtc": "pnpm run --filter=@voice-sandwich-demo/webrtc server",
    "start:twilio": "pnpm run --filter=@voice-sandwich-demo/twilio server",
    "test": "vitest",
    "test:inspect": "node --inspect-brk node_modules/.bin/vitest",
    "typecheck": "pnpm run --recursive --parallel typecheck"
  },
  "devDependencies": {
    "oxfmt": "^0.15.0",
    "oxlint": "^0.15.0"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.0.0"
  }
}