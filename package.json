{
  "name": "voice-sandwich-demo",
  "private": true,
  "scripts": {
    "build": "pnpm run --recursive --parallel build",
    "watch": "pnpm build && pnpm run --parallel build --watch",
    "format": "oxfmt",
    "format:check": "oxfmt --check .",
    "lint": "oxlint .",
    "playground": "pnpm run --filter=@create-voice-agent/playground start"
  },
  "devDependencies": {
    "oxfmt": "^0.15.0",
    "oxlint": "^0.15.0"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.0.0"
  }
}